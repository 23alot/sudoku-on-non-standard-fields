<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gratz_layout"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/congratulationsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gratz"
        android:textSize="24sp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/difficulty"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Очень сложно"
        android:layout_below="@id/congratulationsText"/>
    <TextView
        android:id="@+id/gameTime"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время: 0"
        android:layout_below="@id/difficulty"/>
    <TextView
        android:id="@+id/bestTime"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Лучшее время: 0"
        android:layout_below="@id/gameTime"/>
    <Button
        android:id="@+id/newGame"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        android:layout_below="@+id/bestTime"/>
    <View
        android:id="@+id/popupView"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_marginBottom="0dp"/>
</RelativeLayout>